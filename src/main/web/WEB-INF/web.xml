<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">

    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>org.example.servlets.ControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>org.example.servlets.AreaCheckServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>org.example.filters.AccessFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/check</url-pattern>
        <url-pattern>/templates/index.jsp</url-pattern>
        <url-pattern>/templates/result.jsp</url-pattern>
    </filter-mapping>


    <error-page>
        <error-code>400</error-code>
        <location>/templates/errors/error400.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/templates/errors/error403.jsp</location>
    </error-page>

</web-app>